/**index.wxss**/
.header {
  display: flex;
  align-items: center;
  border: 1rpx solid #00b26a;
  border-radius: 30rpx;
  box-shadow: 0 0 5rpx #00b26a;
  padding:20rpx;
  margin:30rpx 0;
}
.header .plus {
  width:41rpx;
  height:41rpx;
  margin-right:20rpx;
}
.header .now-todo {
  flex: 1;
  font-size: 30rpx;
}
.todos {
  border: 1rpx solid #00b26a;
  border-radius: 30rpx;
  box-shadow: 0 0 5rpx #00b26a;

}
.todos .item {
  display:flex;
  align-items: center; /*居中对齐盒子*/
  padding: 25rpx;
  border-bottom: 1rpx solid  #00b26a;  /*隔开盒子*/
}
.todos .item:last-child {
  border-bottom:0;
}
.todos .item .checkbox {
  margin-right: 20rpx;
}
.todos .item .name {
  flex: 1;
  font-size: 30rpx;
  color:#444;

}
.todos .item.completed .name {  /** 交集选择器 夫组件判断决定子组件样式是否显示 **/
  text-decoration: line-through;
  color:#888;
}
.footer {
  display: flex;
  justify-content: space-between;
  margin:30rpx 0;
  padding:0 10rpx;
  font-size:26rpx;
  color:#777;
  
}
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.empty .title {
  font-size: 60rpx;
  margin: 200rpx 50rpx 50rpx;
  text-align: center;
}
.empty .content {
  color: #666;
  text-align: center;
  font-size: 50rpx;
}